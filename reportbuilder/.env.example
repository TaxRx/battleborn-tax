# Galileo Report Builder - Environment Variables Example
# Copy this file to .env.local for local development

# Environment Configuration
ENVIRONMENT=development
NODE_ENV=development
SERVICE_NAME=galileo-reportbuilder
VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=debug

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here

# Development Configuration
DEV_PORT=8789
DEV_LOCAL_PROTOCOL=http
DEV_UPSTREAM_PROTOCOL=https

# Analytics (Optional)
ENABLE_ANALYTICS=true

# Custom Domain Configuration (Production)
CUSTOM_DOMAIN=reports.galileo.tax
ZONE_NAME=galileo.tax

# Security Headers (Optional)
ENABLE_SECURITY_HEADERS=true
CONTENT_SECURITY_POLICY="default-src 'self'"

# Rate Limiting (Optional)
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Caching Configuration (Optional)
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600